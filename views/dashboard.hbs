<section class="mb-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">ðŸ“‹ Dashboard</h1>
      <p class="text-gray-500 mt-1">All reported lost &amp; found items at a glance.</p>
    </div>
    <a href="/report" class="inline-flex items-center justify-center px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold text-sm rounded-lg shadow-sm hover:shadow-md transition-all no-underline">+ Report New Item</a>
  </div>
</section>

{{#if hasReports}}
<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="text-left px-5 py-3 font-semibold text-xs uppercase tracking-wider text-gray-500 border-b-2 border-gray-200">#</th>
          <th class="text-left px-5 py-3 font-semibold text-xs uppercase tracking-wider text-gray-500 border-b-2 border-gray-200">Item Name</th>
          <th class="text-left px-5 py-3 font-semibold text-xs uppercase tracking-wider text-gray-500 border-b-2 border-gray-200">Date</th>
          <th class="text-left px-5 py-3 font-semibold text-xs uppercase tracking-wider text-gray-500 border-b-2 border-gray-200">Status</th>
          <th class="text-left px-5 py-3 font-semibold text-xs uppercase tracking-wider text-gray-500 border-b-2 border-gray-200">Action</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        {{#each reports}}
        <tr class="hover:bg-gray-50 transition-colors">
          <td class="px-5 py-3.5 text-gray-400 font-mono text-xs">{{inc @index}}</td>
          <td class="px-5 py-3.5 font-semibold text-gray-800">{{this.name}}</td>
          <td class="px-5 py-3.5 text-gray-500">{{this.date}}</td>
          <td class="px-5 py-3.5">
            {{#if (eq this.status 'Lost')}}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-red-50 text-red-600">{{this.status}}</span>
            {{/if}}
            {{#if (eq this.status 'Found')}}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-green-50 text-green-600">{{this.status}}</span>
            {{/if}}
            {{#if (eq this.status 'Closed')}}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-gray-100 text-gray-500">{{this.status}}</span>
            {{/if}}
          </td>
          <td class="px-5 py-3.5">
            <a href="/items/{{this.id}}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-indigo-600 border border-indigo-600 rounded-lg hover:bg-indigo-600 hover:text-white transition-colors no-underline">View Details â†’</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{else}}
<div class="bg-white rounded-xl shadow-sm border border-gray-200 text-center py-16 px-6">
  <div class="text-5xl mb-4">ðŸ“­</div>
  <h2 class="text-xl font-bold text-gray-800 mb-2">No Reports Yet</h2>
  <p class="text-gray-500 max-w-sm mx-auto mb-6">There are no lost item reports in the system. Click the button below to file your first report.</p>
  <a href="/report" class="inline-flex items-center justify-center px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold text-sm rounded-lg shadow-sm hover:shadow-md transition-all no-underline">Report a Lost Item</a>
</div>
{{/if}}
